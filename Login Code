input_user=input("Enter a username: ")
input_pwrd=input("Enter a password: ")
stored_user = "Mary"
stored_pwrd = "swordfish"

  
if input_user == stored_user and input_pwrd == stored_pwrd:
  print("Success")
if input_user != stored_user or input_pwrd != stored_pwrd:
  print('Access Denied')













